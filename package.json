{
  "name": "@pulsewave/monorepo",
  "version": "1.0.0",
  "description": "PulseWave Labs Trading Platform",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd web && npm run dev",
    "dev:api": "cd api && npm run dev",
    "build": "npm run build:web && npm run build:api",
    "build:web": "cd web && npm run build",
    "build:api": "cd api && npm run build",
    "start": "concurrently \"npm run start:web\" \"npm run start:api\"",
    "start:web": "cd web && npm start",
    "start:api": "cd api && npm start",
    "type-check": "cd web && npm run type-check && cd ../api && npm run type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}