# Server Configuration
NODE_ENV=development
API_PORT=3001
HOST=localhost

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://pulsewave.app

# Database Configuration (Supabase)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# Redis alternative (local development)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your_jwt_secret_here_min_32_characters
JWT_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# Signal Engine
SIGNAL_ENGINE_URL=http://localhost:5000
SIGNAL_ENGINE_API_KEY=your_signal_engine_api_key

# External Data Sources
COINMARKETCAP_API_KEY=your_cmc_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# News Sources
NEWS_API_KEY=your_news_api_key
FINNHUB_API_KEY=your_finnhub_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/api.log

# Email (Optional)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@pulsewave.app

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_WEBSOCKET_COMPRESSION=true
ENABLE_SIGNAL_ENGINE=true
ENABLE_NEWS_AGGREGATION=true

# Health Check
HEALTH_CHECK_INTERVAL=30000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret

# Development
DEBUG=pulsewave:*
MOCK_DATA=false